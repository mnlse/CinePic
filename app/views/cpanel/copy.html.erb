<div class="content cpanel-content">
  <nav class="cpanel-sidenav">
    <p class="cpanel-label">Control Panel</p>
    <ul>
      <li><%= link_to "Users", cpanel_users_path %></li>
      <li><%= link_to "Articles", cpanel_articles_path %></li>
      <li><%= link_to "Slideshow", cpanel_slideshow_path %></li>
      <li><%= link_to "People", cpanel_people_path %></li>
      <li><%= link_to "Other", cpanel_other_path %></li>
    </ul>
  </nav>
  <div class="cpanel-display">
    <h2>Manage Users</h2>
    <% @users.each do |user| %>
      <div class="cpanel-user">
      <%= user.email %>
      </div>
    <% end %>
    <h2>Manage People</h2>
    <hr>
    <% @people.each do |person| %>
      <%= person.name %>
    <% end %>
    <%= link_to "New Person", new_person_path %>
    <h2>Manage Slideshow</h2>
    <%= render '/slideshow_pics/panel' %>
  </div>
</div>
