<div class="content">
  <h1>Edit movie</h1>
  <hr>
  <p>Movie ID: <%= @movie.id %>
  <%= simple_form_for @movie do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :ratingcounter %>
    <%= f.input :actors %>
    <%= f.input :yt_trailer_url %>
    <%= f.input :cover_img %>
    <%= f.button :submit %>
  <% end %>
</div>
