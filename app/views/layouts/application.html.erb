<!DOCTYPE html>
<html>
<head>
  <title>CinePic</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'jquery.modal', media: 'all' %>
  <%= javascript_include_tag 'jquery.modal' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="nav-top">
    <div class="nav-left-cont">
      <%= image_tag("logo_white.svg", alt: "CinePic Logo", class: :logo) %>
    </div>

    <div class="nav-mid-cont">
      <div class="search-bar">
        <%= image_tag("search_icon.png", alt: "Search Icon", class: "search-icon") %>
      </div>
    </div>

    <div class="nav-right-cont">
      <%= link_to "Log In", "#login-modal", rel: "modal:open" %>
      <%= link_to "Sign Up", "#signup-modal", rel: "modal:open" %>
    </div>
  </nav>
  <div id="login-modal" class="modal" style="display: none; ">
    <h3>Log In</h3>
    <hr>
    <%= form_for :user, url: user_session_path do |f| %>
      <div class="login-cont">
        <div class="login-unit-cont">
          <%= f.label "e-mail" %>
          <%= f.text_field :email, class: "login-input email-input" %>
        </div>
        <div class="login-unit-cont">
          <%= f.label "password" %>
          <%= f.password_field :password, class: "login-input password-input" %>
        </div>
      </div>
      <%= f.submit nil, value: "Log In", class: "login-submit" %>
    <% end %>
    <div class="social-cont">
      <button class="login-facebook">
        Log In with Facebook
      </button>
      <button class="login-google">
        Log In with Google+
      </button>
    </div>
  </div>

<%= yield %>

</body>
</html>
